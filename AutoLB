--// Centered GUI showing your BPRarePets2 value, updates every 60s
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local runService = game:GetService("RunService")

-- Function to get player's BPRarePets2 value
local function GetPlayerScore()
    local success, result = pcall(function()
        return require(game.ServerScriptService.Library.Saving).Get(player).BPRarePets2
    end)
    if success and result then
        return result
    else
        return 0
    end
end

-- Create GUI
local function CreateScoreGui()
    -- Remove existing GUI if already present
    if playerGui:FindFirstChild("ScoreGui") then
        playerGui.ScoreGui:Destroy()
    end

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "ScoreGui"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = playerGui

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0, 400, 0, 80) -- You can resize
    label.Position = UDim2.new(0.5, -200, 0.5, -40) -- Centered by default
    label.BackgroundTransparency = 0.2
    label.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    label.BorderSizePixel = 0
    label.Text = "üèÜ BPRarePets2: Loading..."
    label.Font = Enum.Font.SourceSansBold
    label.TextScaled = true
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Parent = screenGui

    return label
end

-- Update the score every 60 seconds
local function StartUpdating(label)
    local function update()
        local score = GetPlayerScore()
        label.Text = "üèÜ BPRarePets2: " .. tostring(score)
    end

    update() -- Initial update

    while player and player.Parent do
        wait(60)
        update()
    end
end

-- Init
local scoreLabel = CreateScoreGui()
StartUpdating(scoreLabel)
