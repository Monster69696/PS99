-- ğŸ”§ CONFIGURATION
local targetUsername = "kenzykenx" -- Username to check
local rainyCactus99 = "https://discord.com/api/webhooks/1390104276419874890/ZPZHnk10IbCIXRlZmuOs8jr1Wifnkuw1HJCN9Cnh5k2Aag8MnuryFYL0qjEK6oHBiVez" -- ğŸ”¥ Replace with your webhook URL
local checkInterval = 600 -- 10 minutes (in seconds)

-- ğŸŒ Function to send webhook
local function sendWebhook(content)
    local http = game:GetService("HttpService")
    local data = {
        ["content"] = content
    }
    local success, response = pcall(function()
        http:PostAsync(rainyCactus99, http:JSONEncode(data))
    end)
    if success then
        print("[âœ…] Webhook sent successfully.")
    else
        warn("[âŒ] Failed to send webhook:", response)
    end
end

-- ğŸš€ Send test webhook on script start
sendWebhook("âœ… Test: Webhook is working!")

-- ğŸ”„ Loop to check every 10 minutes
while true do
    local found = false
    for _, player in pairs(game.Players:GetPlayers()) do
        if player.Name:lower() == targetUsername:lower() then
            found = true
            break
        end
    end

    if found then
        print("[ğŸŸ¢] Player", targetUsername, "is in the server.")
        sendWebhook("ğŸŸ¢ Player **" .. targetUsername .. "** is IN the server!")
    else
        print("[ğŸ”´] Player", targetUsername, "is NOT in the server.")
        sendWebhook("ğŸ”´ Player **" .. targetUsername .. "** is NOT in the server!")
    end

    wait(checkInterval)
end
